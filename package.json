{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,graphql,gql}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@lucasecdb/eslint-config": "^0.10.2",
    "eslint": "^7.4.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "release-it": "^13.6.4",
    "typescript": "^3.9.6"
  },
  "scripts": {
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "update-changelog": "node ./scripts/update-changelog.js",
    "release": "release-it"
  }
}
