{
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,graphql,gql}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@lucasecdb/eslint-config": "^0.7.0",
    "eslint": "^6.8.0",
    "husky": "^4.2.5",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.1",
    "release-it": "^13.1.2",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "update-changelog": "node ./scripts/update-changelog.js",
    "release": "release-it"
  }
}
