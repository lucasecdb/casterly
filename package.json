{
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,graphql,gql}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@lucasecdb/eslint-config": "^0.14.0",
    "eslint": "^7.13.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.1",
    "typescript": "^4.1.1-rc"
  },
  "scripts": {
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "dev": "yarn lerna run dev --parallel"
  }
}
