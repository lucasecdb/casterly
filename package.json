{
  "private": true,
  "workspaces": {
    "packages": ["packages/*"],
    "nohoist": ["**/react-router", "**/react-router-dom"]
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": ["eslint --fix", "prettier --write"],
    "*.{json,graphql,gql}": ["prettier --write"]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "@lucasecdb/eslint-config": "^0.14.0",
    "eslint": "^7.11.0",
    "husky": "^4.2.5",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.13",
    "prettier": "^2.1.1",
    "typescript": "^4.1.0-dev.20201018"
  },
  "scripts": {
    "lint": "eslint --ext js,jsx,ts,tsx .",
    "dev": "yarn --cwd packages/react-app-server dev"
  }
}
