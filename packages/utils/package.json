{
  "name": "@casterly/utils",
  "version": "0.5.2",
  "description": "Common utilities used throughout Casterly packages",
  "author": "Lucas Cordeiro <ecdb.lucas@gmail.com>",
  "homepage": "https://github.com/lucasecdb/casterly#readme",
  "license": "MIT",
  "directories": {
    "lib": "lib",
    "test": "__tests__"
  },
  "files": [
    "lib",
    "*.js",
    "*.d.ts"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lucasecdb/casterly.git",
    "directory": "packages/utils"
  },
  "scripts": {
    "test": "echo \"Error: run tests from root\" && exit 1",
    "clean": "rimraf lib",
    "ts": "tsc",
    "build": "yarn clean && yarn ts",
    "dev": "tsc --watch --preserveWatchOutput",
    "prepublishOnly": "yarn build"
  },
  "bugs": {
    "url": "https://github.com/lucasecdb/casterly/issues"
  },
  "devDependencies": {
    "@types/node": "^14.14.10",
    "rimraf": "^3.0.0"
  }
}
