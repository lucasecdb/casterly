{
  "compilerOptions": {
    "lib": ["ES6", "DOM"],
    "jsx": "react",
    "target": "es2017",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "outDir": "lib",
    "allowJs": true,
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["lib/**/*", "./*.js", "./*.d.ts"]
}
