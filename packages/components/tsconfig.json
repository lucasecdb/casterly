{
  "compilerOptions": {
    "lib": ["ES6", "DOM"],
    "jsx": "preserve",
    "target": "es5",
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "outDir": "lib",
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["./lib/**/*", "./*.js", "./*.d.ts"]
}
