{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "outDir": "lib",
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["lib", "./*.js", "./*.d.ts"]
}
