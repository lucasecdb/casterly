{
  "compilerOptions": {
    "lib": ["ES6", "DOM"],
    "jsx": "react",
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "skipLibCheck": true
  },
  "exclude": ["dist/**/*", "./*.js", "./*.d.ts"]
}
