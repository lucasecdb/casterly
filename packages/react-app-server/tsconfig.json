{
  "compilerOptions": {
    "lib": ["ES6", "DOM"],
    "jsx": "react",
    "target": "es2017",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "outDir": "lib",
    "allowJs": true,
    "skipLibCheck": true
  },
  "exclude": ["lib", "./*.js", "./*.d.ts"]
}
