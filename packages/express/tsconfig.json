{
  "compilerOptions": {
    "lib": ["ES6", "DOM"],
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": false,
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "outDir": "lib",
    "skipLibCheck": true
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx"],
  "exclude": ["lib/**/*", "./*.js", "./*.d.ts"]
}
